<UserControl x:Class="RsCommunication.RsComBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RsCommunication"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox Header="UART">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5,10,5,5">
                    <ComboBox Width="170" x:Name="comboBoxRsList"></ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Margin="60,3,3,3" Width="80" x:Name="buttonRsConnect" Content="Connect" Click="buttonRsConnect_Click"></Button>
                </StackPanel>

            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
